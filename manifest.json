{
	"manifest_version": 2,
	"version": "1.0",
	"name": "Bias Detector",
	"description": "Used to discover political bias in news articles",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_end"
		}
	],
	"browser_action": {
		"default_popup": "popup.html"
	 },
	"permissions": [
		"tabs",
		"<all_urls>"
	]
}