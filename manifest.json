{
	"manifest_version": 2,
	"version": "1.0",
	"name": "Bias Detector",
	"description": "Used to discover political bias in news articles",
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"*://*/*",
		"webRequest",
		"webRequestBlocking"
	]
}